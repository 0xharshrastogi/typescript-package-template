{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Project",
            "type": "shell",
            "command": "pnpm build",
            "problemMatcher": ["$tsc"]
        },
        {
            "label": "Type Check",
            "type": "shell",
            "command": "pnpm type-check",
            "problemMatcher": ["$tsc"]
        },
        {
            "label": "Watch Project",
            "type": "process",
            "command": "pnpm",
            "args": ["watch"],
            "problemMatcher": ["$tsc-watch"]
        }
    ]
}
